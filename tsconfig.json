{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "typeRoots": ["./node_modules/@types"],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "target": "ES2020",
    "outDir": "dist",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "allowJs": false,
    "alwaysStrict": null,
    "declaration": true
  },
  "include": ["src/**/*"]
}
